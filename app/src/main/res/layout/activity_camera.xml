<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout"
    tools:context=".CameraActivity"
    android:orientation="vertical">



        <SurfaceView
            android:id="@+id/preview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentBottom="false"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/end_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_layout"
            android:text="End"

            android:textColor="@android:color/holo_red_light"
            android:textSize="35sp">

        </Button>


        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/result_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/no_preview_button"
            android:layout_toEndOf="@+id/end_button"
            android:background="@drawable/button_layout2"
            android:text=""
            android:textColor="@android:color/holo_red_light"
            android:textSize="35sp">


        </Button>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/result_display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/no_preview_button"
            android:layout_toEndOf="@+id/end_button"
            android:background="@drawable/button_layout3"
            android:text=""
            android:textColor="@android:color/holo_red_light"
            android:textSize="35sp"
            android:visibility="invisible">


        </Button>


        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/no_preview_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_layout"
            android:text="No Preview"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp">

        </Button>


    </RelativeLayout>


</FrameLayout>